<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="danceEN.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:danceEN"
    Shell.FlyoutBehavior="Flyout"
    Title="danceEN">

    <FlyoutItem Title="Home"
                Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Teilnehmer"
                Icon="teilnehmer.png">
        <ShellContent ContentTemplate="{DataTemplate local:Teilnehmer}" />
    </FlyoutItem>

    <FlyoutItem Title="Choreografien"
                Icon="choreografien.png">
        <ShellContent ContentTemplate="{DataTemplate local:Choreografien}" />
    </FlyoutItem>

    <FlyoutItem Title="Lieder"
                Icon="lieder.png">
        <ShellContent ContentTemplate="{DataTemplate local:Lieder}"/>
    </FlyoutItem>

</Shell>
